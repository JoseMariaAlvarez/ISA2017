<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="@string/guide"
        android:layout_width="match_parent"
        android:textSize="15pt"
        android:gravity="center"
        android:layout_height="45dp"
        android:id="@+id/textGuias" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/id_"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_weight="0.05"
            android:background="@color/color2"
            android:onClick="abrirPaciente">

            <ImageView
                android:layout_height="100dp"
                android:id="@+id/i_paciente"
                android:cropToPadding="true"
                android:src="@drawable/paciente_icono"
                android:layout_width="67dp"
                android:padding="10dp"/>

            <TextView
                android:text="@string/para_el_paciente_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_paciente"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15pt"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_weight="0.05"
            android:background="@color/color3"
            android:onClick="abrirEmergencia">

            <ImageView
                android:layout_height="100dp"
                android:id="@+id/i_emergencia"
                android:src="@drawable/emergencia_alerta_icono"
                android:cropToPadding="true"
                android:layout_width="74dp"
                android:padding="10dp"/>

            <TextView
                android:text="@string/en_caso_de_emergencia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_emergencia"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15pt"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>